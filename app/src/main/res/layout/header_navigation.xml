<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    
    <ImageView
        android:id="@+id/header_navigation_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/header_navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/header_navigation_logo"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/header_navigation_nome_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        android:textColor="@color/gray_subtitle"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/header_navigation_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Bem Vindo Usuario"/>

</androidx.constraintlayout.widget.ConstraintLayout>